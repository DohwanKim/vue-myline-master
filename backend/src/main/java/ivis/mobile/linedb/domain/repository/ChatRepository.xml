<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ivis.mobile.linedb.domain.repository.ChatRepository">

    <select id="getChatInformation" resultType="chat">
        SELECT *
          FROM chat
         WHERE rid = #{rId}
    </select>

    <select id="getAllInfo" resultType="chatAll">
        SELECT *
          FROM chat
    </select>

</mapper>